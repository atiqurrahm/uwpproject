<Page
    x:Class="Food_Product.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Food_Product"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="50, 50, 50, 100">
        <TextBlock Text="Product List" 
                   FontWeight="SemiBold" 
                   TextAlignment="Center" 
                   FontFamily="Seque UI" 
                   FontSize="24" 
                   Padding="5 5 5 15"/>
        <ListView x:ConnectionId='2' x:Name="listProducts" SelectionMode="Single" Height="400"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                                                                             >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" 
                        Margin="0"
                        BorderBrush="LightSkyBlue"
                        BorderThickness="0,0,0,.5"
                        Padding="5,5,5,5">

                        <Border BorderBrush="LightGreen" 
                                Width="80" Height="80"
                                BorderThickness="1"
                                CornerRadius="5"                                   
                               Padding="2">
                            <Border BorderThickness="1"
                                    CornerRadius="5"                                   
                                    Padding="5"
                
                           >
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Picture}" />
                                </Border.Background>
                            </Border>
                        </Border>
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Text="{Binding Name}"
                                Margin="5 5 255 5"
                                FontWeight="Bold"
                                FontSize="14"
                                />
                            <TextBlock
                                Text="{Binding Weight}"
                                Margin="5"
                                
                                FontSize="12"
                                />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <TextBlock Text="Developed by S M Atiqur Rahman" Margin="10" />
        <TextBlock Text="Trainee id-1268952" Margin="10" />
    </StackPanel>
</Page>

